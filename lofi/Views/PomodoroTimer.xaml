<UserControl x:Class="lofi.Views.PomodoroTimer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:b="clr-namespace:lofi.Behavior"
    xmlns:conv="clr-namespace:lofi.Converters"
    xmlns:vm="clr-namespace:lofi.ViewModels"
    mc:Ignorable="d"
    d:DesignWidth="240" d:DesignHeight="300"
    Width="240" Height="300"
    b:DragInCanvasBehavior.IsEnabled="True"
    b:DragInCanvasBehavior.BringToFront="True"
    b:DragInCanvasBehavior.ClampToParent="True">

    <!-- 컨버터 등록 -->
    <UserControl.Resources>
        <conv:ProgressToRingGeometryConverter x:Key="RingConv"/>
    </UserControl.Resources>

    <!-- VM 연결 -->
    <UserControl.DataContext>
        <vm:PomodoroViewModel/>
    </UserControl.DataContext>

    <!-- 루트 Grid -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="52"/>
        </Grid.RowDefinitions>

        <!-- 카드 배경 -->
        <Border Grid.RowSpan="3"
                Style="{StaticResource Card.Container}"
                IsHitTestVisible="False"
                Panel.ZIndex="0"/>

        <!-- 헤더 -->
        <Grid Grid.Row="0"
              Background="#10000000"
              Cursor="SizeAll"
              b:DragInCanvasBehavior.IsDragGrip="True"
              Panel.ZIndex="5">
            <TextBlock Text="Pomodoro"
                       Style="{StaticResource Widget.Header.Title}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- 본문 -->
        <Grid Grid.Row="1" Margin="12">
            <!-- 링 베이스 -->
            <Ellipse x:Name="RingBase"
                     Width="180" Height="180"
                     Stroke="{DynamicResource Brush.RingBase}"
                     StrokeThickness="{DynamicResource Pomodoro.RingThickness}"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     SnapsToDevicePixels="True"/>

            <!-- 진행 링 -->
            <Path Style="{StaticResource Pomodoro.ProgressPathStyle}"
                  StrokeThickness="{Binding RingThickness}"
                  HorizontalAlignment="Center" VerticalAlignment="Center"
                  SnapsToDevicePixels="True">
                <Path.Data>
                    <MultiBinding Converter="{StaticResource RingConv}">
                        <Binding Path="Progress"/>
                        <Binding ElementName="RingBase" Path="Width"/>
                        <Binding Path="RingThickness"/>
                    </MultiBinding>
                </Path.Data>
            </Path>

            <!-- 중앙 시간만 표시 (라이트모드 가독성 강화 + Z-Order 최상단) -->
            <TextBlock Text="{Binding TimeText, FallbackValue=25:00, TargetNullValue=25:00}"
                       Style="{StaticResource App.TextBlockBase}"
                       FontSize="36" FontWeight="Bold"
                       Foreground="{DynamicResource Pomodoro.WorkBrush}" 
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       IsHitTestVisible="False"
                       Panel.ZIndex="3">
                <TextBlock.Effect>
                    <!-- 얇은 그림자: 밝은 배경에서도 숫자 선명 -->
                    <DropShadowEffect Color="#70000000" BlurRadius="4" ShadowDepth="1" Opacity="0.35"/>
                </TextBlock.Effect>
            </TextBlock>
        </Grid>

        <!-- 하단 버튼 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Style="{StaticResource Button.Icon.Ghost}"
                    Command="{Binding ToggleCommand}"
                    Background="Transparent"
                    Width="48" Height="48">
                <Grid>
                    <!-- Play -->
                    <Image Width="24" Height="24">
                        <Image.Style>
                            <Style TargetType="Image" BasedOn="{StaticResource Img.Play.Theme}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <!-- Pause -->
                    <Image Width="24" Height="24">
                        <Image.Style>
                            <Style TargetType="Image" BasedOn="{StaticResource Img.Pause.Theme}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Grid>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
