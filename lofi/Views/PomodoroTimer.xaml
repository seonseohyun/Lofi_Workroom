<UserControl x:Class="lofi.Views.PomodoroTimer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:b="clr-namespace:lofi.Behavior"
    xmlns:conv="clr-namespace:lofi.Converters"
    xmlns:vm="clr-namespace:lofi.ViewModels"
    mc:Ignorable="d"
    d:DesignWidth="240" d:DesignHeight="300"
    Width="240" Height="300"
    b:DragInCanvasBehavior.IsEnabled="True"
    b:DragInCanvasBehavior.BringToFront="True"
    b:DragInCanvasBehavior.ClampToParent="True">

    <!-- 컨버터 등록 -->
    <UserControl.Resources>
        <conv:ProgressToDashArrayConverter x:Key="ProgressToDashArrayConverter"/>
    </UserControl.Resources>

    <!-- 루트 Grid -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="52"/>
        </Grid.RowDefinitions>

        <!-- 카드 배경 -->
        <Border Grid.RowSpan="3"
                Style="{StaticResource Card.Container}"
                IsHitTestVisible="False"
                Panel.ZIndex="0"/>

        <!-- 헤더 -->
        <Grid Grid.Row="0"
              Background="#10000000"
              Cursor="SizeAll"
              b:DragInCanvasBehavior.IsDragGrip="True"
              Panel.ZIndex="5">
            <TextBlock Text="Pomodoro"
                       Style="{StaticResource Widget.Header.Title}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>

        <!-- 본문 -->
        <Grid Grid.Row="1" Margin="12">
            <!-- 링 베이스(트랙) -->
            <Ellipse x:Name="RingBase"
                     Width="180" Height="180"
                     Stroke="{DynamicResource Brush.RingBase}"
                     StrokeThickness="{Binding RingThickness}"
                     Fill="Transparent"
                     HorizontalAlignment="Center" VerticalAlignment="Center"
                     SnapsToDevicePixels="True"
                     Panel.ZIndex="1"/>

            <!-- 진행 링: 베이스와 완전 동일, StrokeDashArray로 진행률 표시 -->
            <Ellipse x:Name="ProgressRing"
                    Width="180" Height="180"
                    Stroke="{DynamicResource Pomodoro.WorkBrush}"
                    StrokeThickness="{Binding RingThickness}"
                    StrokeDashCap="Flat"
                    Fill="Transparent"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    SnapsToDevicePixels="True"
                    Panel.ZIndex="2"
                    RenderTransformOrigin="0.5,0.5">
                <Ellipse.StrokeDashArray>
                    <MultiBinding Converter="{StaticResource ProgressToDashArrayConverter}">
                        <Binding Path="Progress"/>
                        <Binding ElementName="RingBase" Path="ActualWidth"/>
                        <Binding ElementName="RingBase" Path="ActualHeight"/>
                        <Binding ElementName="RingBase" Path="StrokeThickness"/>
                    </MultiBinding>
                </Ellipse.StrokeDashArray>
                <Ellipse.RenderTransform>
                    <RotateTransform Angle="-90"/>
                </Ellipse.RenderTransform>
            </Ellipse>

            <!-- 시간 텍스트는 최상단 -->
            <TextBlock Text="{Binding TimeText}" 
                       FontSize="36" FontWeight="Bold"
                       Foreground="{DynamicResource Pomodoro.WorkBrush}" 
                       HorizontalAlignment="Center" VerticalAlignment="Center"
                       IsHitTestVisible="False" 
                       Panel.ZIndex="10"/>
        </Grid>

        <!-- 하단 버튼 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Style="{StaticResource Button.Icon.Ghost}"
                    Command="{Binding ToggleCommand}"
                    Background="Transparent"
                    Width="48" Height="48">
                <Grid>
                    <!-- Play -->
                    <Image Width="24" Height="24">
                        <Image.Style>
                            <Style TargetType="Image" BasedOn="{StaticResource Img.Play.Theme}">
                                <Setter Property="Visibility" Value="Visible"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                    <!-- Pause -->
                    <Image Width="24" Height="24">
                        <Image.Style>
                            <Style TargetType="Image" BasedOn="{StaticResource Img.Pause.Theme}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsRunning}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </Grid>
            </Button>
        </StackPanel>
    </Grid>

</UserControl>