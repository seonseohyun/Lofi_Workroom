<UserControl x:Class="lofi.Views.MusicPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:b="clr-namespace:lofi.Behavior"
             b:DragInCanvasBehavior.IsEnabled="True"
             b:DragInCanvasBehavior.BringToFront="True"
             b:DragInCanvasBehavior.ClampToParent="True"
             Width="520" Height="220"
             MinWidth="520" MaxWidth="520"
             MinHeight="220" MaxHeight="220">

    <!-- 루트 Grid -->
    <Grid x:Name="Root" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 헤더 = 드래그 시작 영역(Grip) -->
        <Border Grid.Row="0"
                Background="#01000000"
                Cursor="SizeAll"
                b:DragInCanvasBehavior.IsDragGrip="True"
                Panel.ZIndex="5"/>

        <!-- 카드 배경은 전체 덮기 -->
        <Border Grid.RowSpan="2"
                Style="{StaticResource Card.Container}"
                IsHitTestVisible="False"
                Panel.ZIndex="0"/>

        <!-- 본문 레이아웃 -->
        <Grid Grid.Row="1" Margin="16" Panel.ZIndex="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="16"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- (좌) 앨범 커버 -->
            <Grid Grid.Column="0" Width="140" Height="140">
                <Rectangle RadiusX="12" RadiusY="12" Fill="#112E3440"/>
                <Rectangle RadiusX="12" RadiusY="12">
                    <Rectangle.Fill>
                        <ImageBrush ImageSource="{Binding CoverImage}" Stretch="UniformToFill"/>
                    </Rectangle.Fill>
                    <Rectangle.Style>
                        <Style TargetType="Rectangle">
                            <Setter Property="Opacity" Value="1"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding CoverImage}" Value="{x:Null}">
                                    <Setter Property="Opacity" Value="0"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Rectangle.Style>
                </Rectangle>
            </Grid>

            <!-- (우측 컨텐츠) -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <!-- 제목 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 버튼 -->
                    <RowDefinition Height="Auto"/>
                    <!-- 바+시간 -->
                </Grid.RowDefinitions>

                <!-- 제목 -->
                <TextBlock Grid.Row="1" Margin="0,0,0,6"
                           Style="{StaticResource Text.MusicPlayer.Title}"
                           Text="{Binding TrackTitle}"
                           FontSize="16"
                           TextTrimming="CharacterEllipsis"
                           HorizontalAlignment="Center"/>

                <!-- 버튼 -->
                <Grid Grid.Row="2" Margin="53,29,66,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" MinWidth="72"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto" MinWidth="61"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="14"/>
                        <ColumnDefinition Width="55"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Style="{StaticResource Button.Icon.Ghost}"
                            Command="{Binding PrevCommand}" Margin="20,0,20,0">
                        <Image Width="40" Height="40" Style="{StaticResource Img.Prev.Theme}"/>
                    </Button>

                    <Button Grid.Column="2" Style="{StaticResource Button.Icon.Ghost}"
                            Command="{Binding PlayPauseCommand}" Margin="14,0,14,0">
                        <Grid>
                            <Image Margin="-1,-2,-17,-12">
                                <Image.Style>
                                    <Style TargetType="Image" BasedOn="{StaticResource Img.Play.Theme}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                            <Image Width="48" Height="48">
                                <Image.Style>
                                    <Style TargetType="Image" BasedOn="{StaticResource Img.Pause.Theme}">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </Grid>
                    </Button>

                    <Button Grid.Column="5" Style="{StaticResource Button.Icon.Ghost}"
                            Command="{Binding NextCommand}" Margin="5,0,18,0">
                        <Image Width="40" Height="40" Style="{StaticResource Img.Next.Theme}"/>
                    </Button>
                </Grid>

                <!-- 슬라이더 + 시간 -->
                <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,8,0,0">
                    <!-- ★ 중요: 슬라이더 바인딩 추가 -->
                    <Slider Style="{StaticResource Slider.Mini}"
                            Height="23"
                            Minimum="0"
                            Maximum="{Binding DurationSeconds}"
                            Value="{Binding PositionSeconds}"
                            PreviewMouseDown="Slider_PreviewMouseDown"
                            PreviewMouseUp="Slider_PreviewMouseUp"/>

                    <Grid Margin="0,4,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                   Style="{StaticResource Text.MusicPlayer.Time}"
                                   Text="{Binding PositionText}"
                                   HorizontalAlignment="Left"
                                   FontSize="11"
                                   Opacity="0.7"/>

                        <TextBlock Grid.Column="1" 
                                   Style="{StaticResource Text.MusicPlayer.Time}"
                                   Text="{Binding DurationText}"
                                   HorizontalAlignment="Right"
                                   FontSize="11"
                                   Opacity="0.7"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>