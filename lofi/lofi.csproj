    <Resource Remove="Resources\Music\track6.mp3" />
    <Resource Remove="Resources\Music\track7.mp3" />
    <Resource Remove="Resources\Music\track8.mp3" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Resources\Music\track1.mp3" />
